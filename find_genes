import edu.duke.*;
import java.io.*;

public class Part1 {
    public int findStopCodon(String dna, int startIndex, String stopCodon) {
        int stopIndex = dna.indexOf(stopCodon, startIndex + 3);
        while (stopIndex != -1) {
        
            if ((stopIndex - startIndex) % 3 == 0) {
                return stopIndex;
            }
            else {
                stopIndex = dna.indexOf(stopCodon, stopIndex + 1);
            }
        }
        return stopIndex;
    }
    public void testfindStopCodon() {
        String dna = "atgataataataatttga";
        String Udna = dna.toUpperCase();
        int startIndex = Udna.indexOf("ATG");
        System.out.println(findStopCodon(Udna, startIndex, "TGA"));
    }
    public String findGene(String dna, int startIndex) {
            if (startIndex == -1) {
                return "";
            }
            int taaStopIndex = findStopCodon(dna, startIndex, "TAA");
            int tagStopIndex = findStopCodon(dna, startIndex, "TAG");
            int tgaStopIndex = findStopCodon(dna, startIndex, "TGA");
            int minStopIndex = Math.min(Math.min(taaStopIndex,tagStopIndex),tgaStopIndex);
            if (taaStopIndex == -1 || (tgaStopIndex != -1 && tgaStopIndex < taaStopIndex)) {
                minStopIndex = tgaStopIndex;
            }
            else {
                minStopIndex = taaStopIndex;
            }
            if (minStopIndex == -1 || (tagStopIndex != -1 && tagStopIndex < minStopIndex)) {
                minStopIndex = tagStopIndex;
            }
            if (minStopIndex == -1) {
                return "";
            }
            return dna.substring(startIndex, minStopIndex + 3);
    }
    public void testFindGene() {
                    //0123456789112345678921234567893123456789412345678951234567896123456789712345678981234567899123456
        String dna = "atgatgataatagtttga";
        String Udna = dna.toUpperCase();
        int startIndex = Udna.indexOf("ATG");
        String gene = findGene(Udna, 0);
        if (gene == "1") {
            System.out.println("Error startIndex");
        }
        else if (gene == "2") {
            System.out.println("Error minStopIndex");
        }
        else{
            System.out.println(gene);
        }
    }
    public void printAllGenes() {
        //String dna = "";
        String dna = "agagatgaggatgagggqqqyyyttthhhrrrnnneeedddmmmccckkkxxxjjjsssiiiuuuyyylllpppaaazzzhhhdddtttttttttagaaaatgatgatgatgatgatgatgatgatgatgatgatgtaalielielieatgatgataatagtttganotnotnotatgnotnotnotatgtcctcatga";
        String Udna = dna.toUpperCase();
        int startIndex = Udna.indexOf("ATG");
        while (true) {
            String result = findGene(Udna, startIndex);
            if (findGene(Udna, startIndex) == "1") {
                System.out.println("Error startIndex");
                break;
            }
            if (findGene(Udna, startIndex) == "2") {
                System.out.println("Error minStopIndex");
                break;
            }
            System.out.println(result);
            startIndex = Udna.indexOf("ATG", startIndex + result.length());
        }
    }
    public StorageResource getAllGenes(String dna) {
        StorageResource geneList = new StorageResource();
        String Udna = dna.toUpperCase();
        int startIndex = Udna.indexOf("ATG");
        while (true) {
            String gene = findGene(Udna, startIndex);
            if (findGene(Udna, startIndex) == "") {
                break;
            }
            geneList.add(gene);
            startIndex = Udna.indexOf("ATG", startIndex + gene.length());
        }
        return geneList;
    }
    public void testOn(String dna) {
        StorageResource genes = getAllGenes(dna);
        for (String g : genes.data()) {
            System.out.println(g);
        }
    }
    public double cgRatio(String dna) {
        int startIndex = 0;
        float countC = 0;
        float countG = 0;
        while (true) {
            int gIndex = dna.indexOf("G", startIndex);
            if (gIndex != -1) {
                startIndex = gIndex + 1;
            }
            else {
                break;
            }
            countG+=1;
        }
        startIndex = 0;
        while (true) {
            int cIndex = dna.indexOf("C", startIndex);
            if (cIndex!= -1) {
                startIndex = cIndex + 1;
            }
            else {
                break;
            }
            countC+=1;
        }
        float count = countC + countG;
        float ratio = count / dna.length();
        return ((double) count)/dna.length();
    }
    public int countCTG(String dna) {
        int startIndex = 0;
        int count = 0;
        while (true) {
            int ctgIndex = dna.indexOf("CTG", startIndex);
            if (ctgIndex == -1) {
                break;
            }
            count++;
            startIndex = ctgIndex + 3;
        }
        return count;
    }
    public void processGenes(StorageResource sr) {
        int genecount = 0;
        System.out.println("All Genes: ");
        for (String s : sr.data()) {
                genecount+=1;
        }
        System.out.println(genecount);
        int count = 0;
        System.out.println("Strings longer than 60 characters");
        for (String s : sr.data()) {
            if (s.length() > 60) {
                count++;
            }
        }
        System.out.println("Number of strings longer than 60 characters = " + count);
        int countCG = 0;
        System.out.println("Strings whose C-G-ratio is higher than 0.35");
        for (String s : sr.data()) {
            if (cgRatio(s) > 0.35) {
                countCG++;
            }
        }
        System.out.println("Number of strings with C-G-ratio higher than 0.35 = " + countCG);
        int longestGene = 0;
        String longGeneName = "";
        for (String s : sr.data()) {
            if (s.length() > longestGene) {
                    longGeneName = s;
                    longestGene = longGeneName.length();
            }
        }
        System.out.println("Longest Gene = " + longGeneName.length());
    }
    public void testprocessGenes() {
        FileResource file = new FileResource();
        String dna = file.asString();
        String Udna = dna.toUpperCase();
        Udna = Udna.replace("\n", "").replace("\r","").replace("\t","");
        StorageResource geneList = getAllGenes(Udna);
        processGenes(geneList);
    }
    public void testCTGCount() {
        FileResource file = new FileResource();
        String dna = file.asString();
        String Udna = dna.toUpperCase();
        Udna = Udna.replace("\n", "").replace("\r","").replace("\t","");
        System.out.println(countCTG(Udna));
    }
}
